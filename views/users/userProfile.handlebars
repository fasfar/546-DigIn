<div id="userProfile">
    <h1>{{user.username}}</h1>
    <button type="button" class="btn btn-outline-primary btn-sm"><a href="/followers" class="followLink">{{user.num_followers}} Followers</a></button>
    <button type="button" class="btn btn-outline-primary btn-sm"><a href="/following" class="followLink">{{user.num_following}} Following</a></button>
    <button type="button" class="btn btn-outline-primary btn-sm "><a href="/tags" class="tagLink"> Tags </a></button>
    <button type="button" class="btn btn-outline-primary btn-sm "><a href="/savedRecipes" class="savedLink"> Saved Recipes </a></button>
    <div>

        <ul id="recipeList">
            {{#each recipes}} 
                <li class="list-group-item list-group-item-action list-group-item-primary">
                    <h2><a href="/recipes/id/{{this._id}}">{{this.title}}</a></h2>
                    <dl>
                        <dt>
                            Tags
                        </dt>
                        <dd>
                            {{#each this.tags}}
                                <li>{{this}}</li>
                            {{/each}}
                        </dd>
                        <dt>
                            Ingredients
                        </dt>
                        <dd>
                            {{#each this.ingredients}}
                                <li>{{this}}</li>
                            {{/each}}
                        </dd>
                        <dt>
                            Instructions
                        </dt>
                        <dd>
                           {{ this.instructions}}
                        </dd>
                    </dl>
                </li> 
            {{/each}}
        </ul>

    </div>
    
    <button class="btn btn-secondary btn-outline-dark" <a href="/logout">Logout</a></button>
    <button type="button" id="editProfile" class="btn btn-info btn-outline-dark"><a href="/editUser">Edit Profile</a></button>
</div>