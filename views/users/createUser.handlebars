<div id="create_user" class="user_form">
    {{#if error}}
        <p>{{error}}</p>
    {{/if}}
    <form id="registration_form" method="POST" action="/createUser">
        <label for="registration_name">Name</label>
        <input type="text" id="registration_name" name="name" class="form_input4">
        <label for="registration_email">Email</label>
        <input type="email" id="registration_email" name="email" class="form_input4">
        <label for="registration_username">Username</label>
        <input type="text" id="registration_username" name="username" class="form_input4">
        <label for="registration_password">Password</label>
        <input type="password" id="registration_password" name="password" class="form_input4">        
        <button type="submit" id="registration_button">Register</button>
    </form>
</div>