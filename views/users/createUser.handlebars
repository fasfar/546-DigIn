<div id="createUser">
    <form id="registration_form" method="POST" action="/createUser">
        <label for="registration_name">Name</label>
        <input type="text" id="registration_name" name="registration_name" class="user_reg">
        <label for="registration_email">Email</label>
        <input type="email" id="registration_email" name="registration_email" class="user_reg">
        <label for="registration_pic">Profile Picture</label>
        <input type="text" id="registration_pic" name="registration_pic" class="user_reg">
        <label for="registration_username">Username</label>
        <input type="text" id="registration_username" name="registration_username" class="user_reg">
        <label for="registration_password">Password</label>
        <input type="password" id="registration_password" name="registration_password" class="user_reg">        
        <button type="submit" id="registration_button">Register</button>
    </form>
</div>