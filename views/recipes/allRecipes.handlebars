<div>
    <a href="/recipes/addRecipe">Add new recipe.</a>
    <div>
    <form id="recipeForm" action="/search" method='POST'>
    <label for="recipeSearch">Search for Recipe</label>
    <input type="text" id="recipeSearch" name="recipe">
    <button type="submit">Search</button>

    </form>
    <div id="searchResults" hidden>
    </div>
    
</div>

    <ul id="allRecipes">
        {{#each all_recipe_list}}
            <li>
                <a href="/recipes/id/{{this._id}}">{{this.title}}</a>
            </li>
        {{/each}}
    </ul>
</div>