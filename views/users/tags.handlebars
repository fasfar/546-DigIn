<form id="tagForm" action="/tags" method='POST'>
    <label for="followTag">Follow a tag</label>
    <input type="text" id="followTag" name="followTag">
    <button type="submit">Follow</button>
</form>

<div id = "tagList">
    <ul id="followingTags">
        {{#each tags}} <li id = {{this}}>{{this}}<button class = "unfollowTag" type="submit">Unfollow</button></li> {{/each}}
    </ul>
</div>