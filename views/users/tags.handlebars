<form id="tagForm" action="/tags" method='POST'>
    <label for="followTag">Follow a tag</label>
    <input type="text" id="followTag" name="followTag">
    <button type="submit">Follow</button>
</form>

<div id = "tagList">
    <ul id="followingTags">
        {{#each tags}} <form action="/tags/{{this}}" method="POST">
        <li>{{this}}<button id = "unfollowTag" type="submit">Unfollow</button></li>
        </form>
         {{/each}}
    </ul>
</div>