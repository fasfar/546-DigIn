<div class="user_form">
    <form id="edit_user_form" action="/editUser" method="POST">
        <label for="edit_name">Name</label>
        <input type="text" id="edit_name" name="name" class="user_edit">
        <label for="edit_email">Email</label>
        <input type="email" id="edit_email" name="email" class="user_edit">
        <label for="edit_pic">Profile Picture</label>
        <input type="text" id="edit_pic" name="profile_picture" class="user_edit">
        <label for="edit_username">Username</label>
        <input type="text" id="edit_username" name="username" class="user_edit">
        <label for="edit_password">Password</label>
        <input type="password" id="edit_password" name="password" class="user_edit">        
        <button type="submit" id="edit_button">Submit</button>
    </form>
</div>